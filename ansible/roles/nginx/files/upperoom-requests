server {
    listen 443 ssl;
    server_name upperoom.ng www.upperoom.ng;

    ssl_certificate /etc/letsencrypt/live/upperoom.ng/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/upperoom.ng/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location / {
        include proxy_params;
        proxy_pass http://127.0.0.1:8000;
    }

    location /static/ {
        alias /var/www/static/;
    }
}

server {
    listen 80;
    server_name www.upperoom.ng;
    return 301 https://upperoom.ng$request_uri;
}
